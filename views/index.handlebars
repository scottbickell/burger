<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Add A Burger</h2>
            <div class="form-group">
                <form method="POST" action="api/burgers">
                    <input class="form-control" type="text" id="ca" placeholder="Add a tasty burger..." name="burger_name">
                    <button class="btn btn-primary" type="submit">Create!</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>New Burgers</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    <h4>{{burger_name}}</h4>
                    <button class="devour-it btn btn-primary" data-id="{{id}}" data-devoured="{{eaten}}">
                        Devour it!
                    </button>
                </li>
                <hr>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Burgers Devoured</h2>
            <hr>
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    <h4>{{this.burger_name}}</h4>
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>